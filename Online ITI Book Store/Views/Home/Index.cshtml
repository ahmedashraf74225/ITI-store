@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
        }

        .welcome-container {
            text-align: center;
            padding: 100px 0;
        }

        .welcome-heading {
            font-size: 2.5rem;
            margin-bottom: 10px;
            color: #428bca;
        }

        .sub-heading {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #333;
        }

        .learn-link {
            color: #428bca;
            text-decoration: none;
        }

            .learn-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="welcome-container">
        <h1 class="welcome-heading">Online ITI Book Store</h1>
        <h2 class="sub-heading">By Ahmed Ashraf</h2>
        <p class="text-center" style="font-size: 18px; color: #555;">Explore our collection of books and enhance your learning experience.</p>
    </div>
</body>
</html>
