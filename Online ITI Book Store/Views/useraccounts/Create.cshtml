@model Online_ITI_Book_Store.Models.useraccounts

@{
    ViewData["Title"] = "Create";
    ViewData["HideNavbar"] = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online_ITI_Book_Store</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Animations file -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <style>
        /* Custom styling */
        body {
            background-color: #f5f5f5;
            color: #333;
        }

        .container {
            padding-top: 50px;
        }

        .styled-heading {
            font-size: 2.5rem;
            font-weight: bold;
            color: #428bca; /* Blue color */
        }

        .form-card {
            border: none;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

        .form-card-title {
            font-size: 1.5rem;
            color: #333;
        }

        .btn-create {
            background-color: #5cb85c; /* Green color */
            border-color: #5cb85c;
        }

            .btn-create:hover {
                background-color: #449d44; /* Darker green color */
                border-color: #398439;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-4 styled-heading animate__animated animate__fadeIn">Create an Account</h1>
        <hr />

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create" class="needs-validation form-card" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-body">
                        <h5 class="form-card-title">Enter Your Details</h5>
                        <div class="form-group">
                            <label asp-for="name" class="control-label">Full Name</label>
                            <input asp-for="name" class="form-control" required maxlength="10" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="pass" class="control-label">Password </label>
                            <input asp-for="pass" class="form-control" type="password" required minlength="5" pattern="^(?=.*[A-Za-z])(?=.*\d).+$" />
                            <span asp-validation-for="pass" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="email" class="control-label">Email Address</label>
                            <input asp-for="email" class="form-control" type="email" required />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-block btn-create mt-3">Create Account</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="login" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
   






    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
